<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="idAdminDialog"
        title="Admin page"
        class="sapUiResponsivePadding"
        stretch="false"
    >
        <customHeader>
            <Bar id="idDialogHeader">
                <contentLeft>
                    <Title
                        id="idAdminPage"
                        text="Admin page"
                    />
                </contentLeft>
                <contentRight>
                    <Button
                        id="applyColorButton"
                        press="onClose"
                        type="Reject"
                        tooltip="Close"
                        icon="sap-icon://decline"
                    />
                </contentRight>
            </Bar>
        </customHeader>
        <VBox
            id="idDialogContent"
            class="sapUiSmallMargin sapUiResponsiveMargin"
        >
       
            <Label
                id="idEmployeeIDLabelF"
                text="Employee ID:"
                
            />
            <Text
                class="textFieldsAF"
                id="idEmployeeIDInputF"
               
            />
         
 
            <Label
                id="idEmployeeNameLabeFl"
                text="Name:"
               
            />
            <Text
            class="textFieldsAF"
                id="idNameInputF"
               
            />
 
            <Label
                id="idEmployeeEmailLabelF"
                text="Email:"
                
            />
            <Text
            class="textFieldsAF"
                id="idEmailInputF"
                
            />
 
            <Label
                id="idEmployeePhoneLabelF"
                text="Phone:"
              
            />
            <Text
            class="textFieldsAF"
                id="idPhoneInputF"
                
            />
 
            <Label
                id="idEmployeeAreaLabeFl"
                text="Process Area:"
                required="true"
            />
            <ComboBox
                id="idAreaInput"
                placeholder="Select Area from Dropdown"
            >
                <!-- Populate with items as needed -->
            </ComboBox>
 
            <Label
                id="idEmployeeGroupLabelF"
                text="Group:"
                required="true"
            />
            <ComboBox
                id="idGroupInput"
                placeholder="Select Group from Dropdown"
            >
                <!-- Populate with items as needed -->
            </ComboBox>
 
            <Label
                id="idEmployeeQueueLabelF"
                text="Queue:"
                required="true"
            />
            <ComboBox
                id="idQueueInput"
                placeholder="Select Queue from Dropdown"
            >
                <!-- Populate with items as needed -->
            </ComboBox>
        </VBox>
        <HBox
            id="idButton"
            justifyContent="SpaceAround"
        >
            <Button
                id="idApproveButton"
                text="Approve"
                type="Emphasized"
                press="onApprove"
               
            />
        </HBox>
    </Dialog>
</core:FragmentDefinition>
 
 